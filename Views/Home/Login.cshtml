@model MVC_TKsovellus_1001.Models.Logins

@{

    ViewBag.Title = "Kirjaud";

}

<h3>Sisäänkirjautuminen</h3>



    @using (Html.BeginForm("Authorize", "Home", FormMethod.Post))

    {

        @Html.AntiForgeryToken()

<div class="row mb-3">

    <h5>Käyttäjän tunnistus</h5>

    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    @Html.HiddenFor(model => model.LoginId)

    <div class="row mb-3">

        @Html.LabelFor(model => model.UserName, "Käyttäjänimi", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-sm-6">

            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

        </div>

    </div>

    <div class="row mb-3">

        @Html.LabelFor(model => model.PassWord, "Salasana", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-sm-6">

            @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })

        </div>

    </div>

    @if (ViewBag.LoginMessage == "Login unsuccessfull")
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Html.DisplayFor(model => model.LoginErrorMessage)</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-2 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Lähetä</button>
        </div>

    </div>

</div>

    }

